{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "rootDir": ".",
    "outDir": "build",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "module": "node16",
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "tools/src/listProtos.ts",
    "tools/src/minify.ts",
    "tools/src/prepublish.ts",
    "src/*/*.ts",
    "test/system-test/*.ts",
    "test/unit/*.ts",
    "protos/**/*.json",
    "src/*.json",
    "test/fixtures/*.json"
  ]
}
