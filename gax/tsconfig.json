{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "rootDir": ".",
    "outDir": "build",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/*.ts",
    "tools/src/listProtos.ts",
    "tools/src/minify.ts",
    "tools/src/prepublish.ts",
    "src/*/*.ts",
    "test/system-test/*.ts",
    "test/unit/*.ts",
    "*/*.json",
    "test/fixtures/*.json",
    "test/showcase-echo-client/*/*.json"
  ]
}
